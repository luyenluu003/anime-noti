{
  "name": "ai-anime-desktop-pet",
  "version": "1.0.0",
  "description": "Desktop anime girl pet with Electron and React",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:vite": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:pack": "electron-builder",
    "start": "npm run build && electron .",
    "create-sprites": "node scripts/create-sprites.js",
    "setup": "npm install && npm run create-sprites"
  },
  "keywords": ["electron", "react", "anime", "desktop-pet", "shimeji"],
  "author": "AI Assistant",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.ai-anime.desktop-pet",
    "productName": "AI Anime Desktop Pet",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
